			<role-hint>ExceptionTask</role-hint>
			<implementation>
				org.sonatype.nexus.error.reporting.ExceptionTask
			</implementation>
			<instantiation-strategy>per-lookup</instantiation-strategy>
			<isolated-realm>false</isolated-realm>
			<requirements>
				<requirement>
					<role>org.codehaus.plexus.PlexusContainer
					</role>
					<role-hint>default</role-hint>
					<field-name>plexusContainer</field-name>
				</requirement>
				<requirement>
					<role>org.sonatype.nexus.error.reporting.ErrorReportingManager
					</role>
					<role-hint>default</role-hint>
					<field-name>errorManager</field-name>
				</requirement>
			</requirements>
		</component>
	</components>
</component-set>
