<?xml version="1.0" encoding="UTF-8"?>

<metadata>

  <description>Nexus Plugin Manager (Plexus) ITAR</description>

  <requires>
    <property>
      <name>appName</name>
    </property>
    <property>
      <name>runtimeDir</name>
    </property>
    <property>
    	<name>applicationDir</name>
    	<default>${runtimeDir}/runtime/apps/${appName}</default>
    	<optional>true</optional>
    </property>
    <property>
      <name>pluginDir</name>
      <default>${applicationDir}/plugin-repository</default>
      <optional>true</optional>
    </property>     
  </requires>

</metadata>
