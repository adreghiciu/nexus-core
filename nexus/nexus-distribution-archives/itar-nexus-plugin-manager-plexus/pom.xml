<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus</groupId>
    <artifactId>nexus-distribution-archives</artifactId>
    <version>1.5.1-SNAPSHOT</version>
  </parent>

  <groupId>org.sonatype.nexus</groupId>
  <artifactId>itar-nexus-plugin-manager-plexus</artifactId>
  <packaging>pom</packaging>

  <name>Nexus (ITAR :: Plugin Manager :: Plexus)</name>

  <properties>
    <nexus.unpack.dir>${project.build.directory}/unpacked/nexus-oss</nexus.unpack.dir>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-webapp</artifactId>
      <classifier>bundle</classifier>
      <type>zip</type>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>core</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>
                nexus-webapp
              </includeArtifactIds>              
              <outputDirectory>${nexus.unpack.dir}</outputDirectory>
              <includes>
                **/atinject-*,
                **/google-collect-*,
                **/nexus-plugin-manager-*,
                **/reflect-class-descriptor-*,
                **/plugin-gleaner-*,
                **/xbean-reflect-*
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>   

</project>
